<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefaultNoteColor"
    tools:context=".CreateCheckBoxNote">

    <ImageView
        android:id="@+id/image_back_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints,UseAppTint"
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_back"
        android:tint="@color/colorIcons"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="12dp" />
    <ImageView
        android:id="@+id/image_done_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints,UseAppTint"
        android:layout_marginLeft="6dp"
        android:background="@drawable/background_done_button"
        android:src="@drawable/ic_done"
        android:tint="@color/colorIcons"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="12dp" />

    <EditText
        android:id="@+id/editTextCheckBox"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_back_check"
        tools:ignore="Autofill"
        android:layout_marginStart="15dp" />
</androidx.constraintlayout.widget.ConstraintLayout>